<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <!-- appender [* child] : 一个appender子元素定义一个日志输出目的地 -->
    <!-- org.apache.log4j.ConsoleAppender (控制台) -->
    <appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
        <!-- 设置日志输出的格式-->
        <layout class="org.apache.log4j.PatternLayout">
            <!-- The default pattern: Date Priority [Category] Message\n -->
            <param name="ConversionPattern" value="[%7r] %6p - %30.30c - %m \n"/>
        </layout>
    </appender>

    <!-- org.apache.log4j.FileAppender (文件) -->s
    <appender name="FILE-DEBUG" class="org.apache.log4j.FileAppender">
        <param name="Append" value="false"/>
        <param name="file" value="d:/z.redisClient-debug.log"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d [%7r] %6p - %30.30c - %m \n"/>
        </layout>
    </appender>

    <!--  org.apache.log4j.DailyRollingFileAppender (每天产生一个日志文件) -->
    <appender name="FILE" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="DatePattern" value="'.'yyyy-MM-dd"/>
        <!-- 设置是否在重新启动服务时，在原有日志的基础添加新日志 -->
        <param name="Append" value="true"/>
        <param name="file" value="d:/z.redisClient.log"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d [%7r] %6p - %30.30c - %m \n"/>
        </layout>
        <!--过滤器设置输出的级别-->
        <filter class="org.apache.log4j.varia.LevelRangeFilter">
            <param name="LevelMin" value="INFO"/>
            <!--<param name="LevelMax" value="FATAL "/>-->
        </filter>
    </appender>

    <!-- root [? child] : root子元素定义了root logger -->
    <!-- 根logger的设置-->
    <root>
        <!-- 日记记录的优先级priority -->
        <priority value="${z.redisClient.log.level}"/>
        <!-- root 整体设置过滤优先级，如果appender没有设置filter或Threshold默认采用该级别，定义的logger不在其中（即不会被过滤掉） -->
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE-DEBUG"/>
    </root>

    <category name="com.linkedkeeper" additivity="true">
        <priority value="${redis-client.log.level}"/>
        <appender-ref ref="FILE"/>
    </category>
    
</log4j:configuration>
